<div class="container">
    <a href="~/Admin/Index" class="btn btn-primary ">&laquo;Вернуться</a>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalRoom" onclick="clearTextBoxRoom();">Добавить комнату</button>
    <h2>Список Комнат</h2>
    <br />
    <table class="table table-bordered table-hover">

        <thead>
            <tr>
                <th hidden="hidden">
                    Id
                </th>
                <th>
                    Название
                </th>
                <th>
                    Тип
                </th>

                <th>
                    Размер
                </th>

                <th>
                    Действие
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="ModalRoom" tabindex="-1" role="dialog" aria-labelledby="ModalLabelRoom" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="ModalLabelRoom">Добавить комнату</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group " style="display:none;">
                        <label for="IdRoom">ID</label>
                        <input type="text" class="form-control" id="IdRoom" placeholder="IdRoom" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Название </label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <label for="RoomTypeAsString">Тип комнаты</label>
                        <select id="RoomTypeAsString" required>
                            <option selected value="">Выберите тип комнаты</option>
                            <option selected value="Large">Большая</option>
                            <option selected value="Medium">Средняя</option>
                            <option selected value="Small">Маленькая</option>
                            <option selected value="Other">Другое</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="SizeRoom">Размер</label>
                        <input type="number" class="form-control" id="SizeRoom" placeholder="SizeRoom" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return AddRoom();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="UpdateRoom();">Update</button> @* *@
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/CRUD_Room.js"></script>